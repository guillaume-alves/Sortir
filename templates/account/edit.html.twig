{% extends 'base.html.twig' %}

{% block title 'Editer mon profil'%}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center my-5">Editer mon Profil</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.telephone) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Apply Changes</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}