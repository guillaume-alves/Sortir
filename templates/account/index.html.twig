{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6  my-auto text-center">

            <h1 class="text-center">Mon profil</h1>

            <img class="rounded-top d-block w-auto mx-auto" src="{{ (app.user.imageName ? vich_uploader_asset(app.user) : ('/../images/avatar_icon.png')) }}" alt="avatar">

    <div class="row">
        <p class="lead"> {{ app.user.prenom }} {{ app.user.nom }} </p>
        <p> #{{ app.user.campus.nom }} </p>
        <p> {{ app.user.telephone }}</p>
        <p> {{ app.user.email }}</p>
    </div>
        <p>
            <a href={{ path('app_account_edit') }}#">Editer mon profil</a> | <a href="#">Changer mon mot de passe</a>
        </p>
        </div>
    </div>
{% endblock %}