{% extends 'base.html.twig' %}

{% block title %}Hello SortiesController!{% endblock %}

{% block body %}
    <h1 class="container text-left h3 mb-3 font-weight-normal">Filtrer les sorties</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-5 bg-warning>">
                <div class="my-3>">
                    <label for="choixCampus">Campus</label>
                    <select>
                        <option> Tous</option>
                        {% for c in campus %}
                            <option> {{ c.nom }}</option>
                        {% endfor  %}
                    </select>
                </div>

                <div class="my-3">
                    <label for="nomsortie">Le nom de la sortie contient</label>
                    <input type="search" name="nomsortie" id="nomsortie" >
                </div>

                <div class="my-3">
                    <label for="datedebut">Entre</label>
                    <input type="date" name="datedebut" id="datedebut " >
                    <label for="datefin">et</label>
                    <input type="date" name="datefin" id="datefin" >
                </div>
            </div>

            <div class="col-md-2">
                <input type="checkbox" name="jorganise" id="datedebut" > Organisateur/trice<br>
                <input type="checkbox" name="jorganise" id="datedebut" > Incrit/e<br>
                <input type="checkbox" name="jorganise" id="datedebut" > Pas incrit/e<br>
                <input type="checkbox" name="jorganise" id="datedebut" > Passées
            </div>

            <div class="col-md">
                <button class="btn btn-warning" type="submit" >Rechercher</button>
            </div>
        </div>
    </div>

        <table class="mt-3 table">
            <thead>
                <tr>
                    <th class="text-muted" style="font-size: smaller">Nom de la sortie</th>
                    <th class="text-muted" style="font-size: smaller">Date de la sortie</th>
                    <th class="text-muted" style="font-size: smaller">Cloture</th>
                    <th class="text-muted" style="font-size: smaller">Inscrits/Places</th>
                    <th class="text-muted" style="font-size: smaller">Etat</th>
                    <th class="text-muted" style="font-size: smaller">Inscrit</th>
                    <th class="text-muted" style="font-size: smaller">Organisateur</th>
                    <th class="text-muted" style="font-size: smaller">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sortie in sortiesValid %}
            <tr>
                <th scope="col">{{ sortie.nom }}</th>
                <td>{{ sortie.dateHeureDebut|date('d-m-Y H:i')}}</td>
                <td>{{ sortie.dateLimiteInscription|date('d-m-Y')}}</td>
                <td>{{ sortie.participant|length }}/{{ sortie.nbInscriptionsMax }} </td>
                <td>{{ sortie.etat.libelle}}</td>
                <td>{% if app.user in sortie.getParticipant %} {{ 'Oui' }} {% endif %}</td>
                <td>
                    <a href="{{ path('app_participant_show', {id: sortie.organisateur.id}) }}">
                        {{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom }}</a>
                </td>
                <td>
                    <a href="{{ path('app_sortie_show', {id: sortie.id}) }}">
                        Afficher
                    </a><br>

                    {% if (is_granted('ROLE_ADMIN')==true or app.user == sortie.organisateur) %}
                    <a href="{{ path('app_sortie_edit', {id: sortie.id}) }}">
                        Modifier
                    </a><br>
                    {% endif %}

                    {% if app.user not in sortie.getParticipant %}
                        <a id="register-link" href="{{ path('app_sortie_subscribe', {id: sortie.id}) }}">
                            S'inscrire
                        </a><br>
                    {% endif %}

                    {% if app.user in sortie.getParticipant %}
                        <a class="link-danger" href="{{ path('app_sortie_unsubscribe', {id: sortie.id}) }}">
                            Se désinscrire
                        </a><br>
                    {% endif %}
                </td>
            </tr>
            </tbody>
            {% endfor %}

        </table>

    <a class="btn btn-primary" href="{{ path('app_sortie_create') }}" role="button">Créer une sortie</a>

{% endblock %}
