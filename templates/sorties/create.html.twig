{% extends 'base.html.twig' %}

{% block title %}Oui.sorties !{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-8 my-auto mx-auto">
        <h1 class="text-center">Nouvelle sortie</h1>
        {{ form_start(sortieForm) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(sortieForm.nom) }}
            </div>
            <div class="col-md">
                {{ form_row(sortieForm.lieu) }}
            </div>
            <div class="d-flex align-items-center justify-content-center col-md-1">
                <a class="btn btn-warning" href="{{ path('app_lieu') }}" role="button">+</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(sortieForm.dateHeureDebut) }}
            </div>
            <div class="col-md-6">
                {{ form_row(sortieForm.dateLimiteInscription) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {{ form_row(sortieForm.duree) }}
            </div>
            <div class="col-md-3">
                {{ form_row(sortieForm.nbInscriptionsMax) }}
            </div>
            <div class="col-md">
                {{ form_row(sortieForm.etat) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                {{ form_row(sortieForm.infosSortie) }}
            </div>
        </div>
        <div class="row">
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-primary" formnovalidate>Envoyer</button>
            </div>
        </div>
                {{ form_end(sortieForm) }}
    </div>
</div>
{% endblock %}

